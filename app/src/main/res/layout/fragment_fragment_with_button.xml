<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.firebase.FragmentWithButton">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:id="@+id/fragment_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Age_user"
            android:hint="Age of the user"
            android:textColorHint="#80fffdfd"
            android:layout_below="@+id/Name_user"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/Name_user"
            android:layout_alignEnd="@+id/Name_user" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Weight_user"
            android:hint="Weight of the user"
            android:textColorHint="#80fcfcfc"
            android:layout_below="@+id/Name_user"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Name_user"
            android:hint="Name of the user"
            android:textColorHint="#80ffffff"
            android:layout_marginTop="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Generate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/fragment_button"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Expert"
            android:textColor="@android:color/white"
            android:layout_width="90dp"
            android:layout_height="37dp"
            android:id="@+id/Expert"
            android:background="@color/colorPrimaryDark"
            android:layout_alignTop="@+id/Medium"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Beginner"
            android:layout_width="90dp"
            android:layout_height="37dp"
            android:textColor="@android:color/white"
            android:id="@+id/Beginner"
            android:background="@color/colorPrimaryDark"
            android:layout_above="@+id/fragment_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />

        <Button
            android:text="Medium"
            android:layout_width="90dp"
            android:layout_height="37dp"
            android:textColor="@android:color/white"
            android:id="@+id/Medium"
            android:background="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/Beginner" />
    </RelativeLayout>
</FrameLayout>
