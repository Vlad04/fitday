<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expert_system"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.androidhive.firebase.ExpertSystem"
    android:background="@drawable/backgroundappb">

    <Button
        android:text="Done"
        android:id="@+id/Done"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:shape="oval"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light" />

    <TextView
        android:text="Welcome, please answer the questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-black"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/white"
        android:textSize="14dp"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/how_many_days"
        android:textStyle="italic"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="From 5 days of training how many did you complete?" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textStyle="italic"
        android:ems="10"
        android:id="@+id/did_hurt"
        android:layout_below="@+id/how_many_days"
        android:layout_alignParentLeft="true"
        android:textColorHint="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Did you get hurt ? (Y=1/N=0)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/you_tired"
        android:textStyle="italic"
        android:textColorHint="@android:color/white"
        android:layout_below="@+id/did_hurt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Are you tired ? (Y=1/N=0)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textStyle="italic"
        android:id="@+id/heavy_Week"
        android:textSize="16dp"
        android:textColorHint="@android:color/white"
        android:hint="Are you going to have a heavy week ? (Y=1/N=0)"
        android:layout_below="@+id/you_tired"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
