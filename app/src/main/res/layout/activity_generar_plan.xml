<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_generar_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.androidhive.firebase.GenerarPlan"
    android:background="@drawable/loginbackground">

    <Button
        android:text="Generate"
        android:id="@+id/generate_plan_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:shape="oval"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/unnamed"
        android:id="@+id/imageView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calentamiento_textview"
        android:layout_alignLeft="@+id/calentamiento_textview"
        android:layout_alignStart="@+id/calentamiento_textview"
        android:layout_marginTop="13dp"
        android:id="@+id/peso_calentamiento_textview"
        android:text="Peso de calentamiento" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/peso_calentamiento_textview"
        android:layout_alignLeft="@+id/calentamiento_valor"

        android:layout_alignStart="@+id/calentamiento_valor"
        android:id="@+id/peso_calentaiento_valor"
        android:text="25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/peso_calentamiento_textview"
        android:layout_marginTop="13dp"
        android:id="@+id/muscle_textview"
        android:text="Musculo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/muscle_textview"
        android:layout_alignLeft="@+id/muscle_textview"
        android:layout_alignStart="@+id/muscle_textview"
        android:layout_marginTop="11dp"
        android:id="@+id/exercise_textview"
        android:text="Exercise 1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/series_textview"
        android:layout_alignLeft="@+id/repetitions_valor"
        android:layout_alignStart="@+id/repetitions_valor"
        android:id="@+id/series_valor"
        android:text="4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weight_textview"
        android:layout_alignLeft="@+id/series_valor"
        android:layout_alignStart="@+id/series_valor"
        android:id="@+id/weight_valor"
        android:text="70"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/calentamiento_textview"
        android:layout_alignStart="@+id/calentamiento_textview"
        android:layout_marginTop="29dp"
        android:id="@+id/rutina_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight_textview"
        android:text="hola"
        android:layout_above="@+id/generate_plan_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/series_textview"
        android:text="Series"
        android:layout_above="@+id/weight_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercise_valor"
        android:layout_alignRight="@+id/exercise_valor"
        android:layout_alignEnd="@+id/exercise_valor"
        android:id="@+id/Exercise_2_valor"
        android:layout_alignLeft="@+id/exercise_valor"
        android:layout_alignStart="@+id/exercise_valor" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Exercise_2_valor"
        android:layout_alignRight="@+id/Exercise_2_valor"
        android:layout_alignEnd="@+id/Exercise_2_valor"
        android:id="@+id/Exercise_3_valor"
        android:layout_alignLeft="@+id/Exercise_2_valor"
        android:layout_alignStart="@+id/Exercise_2_valor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/calentamiento_textview"
        android:text="Calentamiento"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Exercise 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Exercise_2_textView"
        android:layout_toRightOf="@+id/rutina_textview"
        android:layout_alignStart="@+id/muscle_textview"
        android:layout_toEndOf="@+id/rutina_textview"
        android:layout_below="@+id/exercise_textview" />

    <TextView
        android:text="Exercise 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Exercise_3_TextView"
        android:layout_alignStart="@+id/muscle_textview"
        android:layout_below="@+id/Exercise_2_textView"
        android:layout_toRightOf="@+id/rutina_textview"
        android:layout_toEndOf="@+id/rutina_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repetitions_textview"
        android:layout_alignStart="@+id/muscle_textview"
        android:text="Repetitions"
        android:layout_above="@+id/series_textview"
        android:layout_toRightOf="@+id/rutina_textview"
        android:layout_toEndOf="@+id/rutina_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/muscle_valor"
        android:text="Biceps and triceps"
        android:layout_alignStart="@+id/peso_calentaiento_valor_textview"
        android:layout_alignBaseline="@+id/muscle_textview"
        android:layout_alignBottom="@+id/muscle_textview"
        android:layout_toRightOf="@+id/peso_calentamiento_textview"
        android:layout_toEndOf="@+id/peso_calentamiento_textview"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/exercise_valor"
        android:text="Barbell Close Grip Bench Press"
        android:layout_alignBaseline="@+id/exercise_textview"
        android:layout_alignBottom="@+id/exercise_textview"
        android:layout_alignRight="@+id/calentamiento_valor"
        android:layout_alignEnd="@+id/calentamiento_valor"
        android:layout_toRightOf="@+id/peso_calentamiento_textview"
        android:layout_toEndOf="@+id/peso_calentamiento_textview" />

    <TextView
        android:text="TextVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Exercise_4_Value"
        android:layout_below="@+id/Exercise_3_valor"
        android:layout_alignLeft="@+id/Exercise_3_valor"
        android:layout_alignStart="@+id/Exercise_3_valor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Exercise 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Exercise_4_TextView"
        android:layout_alignStart="@+id/muscle_textview"
        android:layout_below="@+id/Exercise_3_TextView"
        android:layout_toRightOf="@+id/rutina_textview"
        android:layout_toEndOf="@+id/rutina_textview" />

    <TextView
        android:layout_width="100dp"
        android:singleLine="true"
        android:maxLength="30"
        android:layout_height="wrap_content"
        android:id="@+id/calentamiento_valor"
        android:text="2 Sets of 10"
        android:layout_above="@+id/peso_calentamiento_textview"
        android:layout_alignLeft="@+id/muscle_valor"
        android:layout_alignStart="@+id/muscle_valor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repetitions_valor"
        android:text="4-6"
        android:layout_above="@+id/series_valor"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
